<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textColorSecondary">@android:color/white</item>
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:scrollbarThumbVertical">@color/colorPrimaryDark</item>
    <item name="android:windowContentTransitions">true</item>
    <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
    <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
  </style>

  <!-- App -->
  <style name="FloatingActionButtonTheme">
    <item name="android:backgroundTint">@color/colorPrimaryDark</item>
  </style>

  <style name="BaseToolbar" parent="@style/Widget.AppCompat.Toolbar">
    <item name="android:theme">@style/ToolbarTheme</item>
  </style>

  <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:textColorPrimary">@android:color/white</item>
    <item name="android:textColorSecondary">@android:color/white</item>
    <item name="android:background">@color/colorPrimaryDark</item>
  </style>

  <!-- Home View -->
  <style name="HomeTheme">
    <item name="android:background">@color/homeBackground</item>
  </style>

  <!-- Timeline Views -->
  <style name="StatusTheme">
    <item name="android:textColor">@color/statusTextColor</item>
    <item name="android:textColorLink">@color/statusTextColorLink</item>
  </style>

  <style name="ImageMediaAttachmentsTheme">
    <item name="android:background">@color/homeBackground</item>
  </style>

  <!-- Create Toot View -->
  <style name="CreateTootTheme">
    <item name="android:background">@color/homeBackground</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="CreateTootEditTextStyle">
    <item name="colorAccent">#2b5fd9</item>
    <item name="android:textCursorDrawable">@drawable/shape_cursor</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textColorHint">@android:color/darker_gray</item>
    <item name="android:textColorHighlight">#2b5fd9</item>
  </style>
</resources>
