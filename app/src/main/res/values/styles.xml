<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textColorSecondary">@android:color/white</item>
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:scrollbarThumbVertical">@color/colorPrimaryDark</item>
  </style>

  <!-- Timeline Views -->
  <style name="StatusTheme">
    <item name="android:background">@color/statusBackground</item>
    <item name="android:textColor">@color/statusTextColor</item>
    <item name="android:textColorLink">@color/statusTextColorLink</item>
  </style>
</resources>
